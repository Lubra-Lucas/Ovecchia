modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["glibcLocales"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Streamlit + Bot"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Streamlit Server"

[[workflows.workflow]]
name = "Streamlit Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uv add yfinance plotly && streamlit run app.py --server.port 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "Streamlit + Bot"
author = 45300270
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py --server.port 5000 --server.address 0.0.0.0"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python telegram_bot.py"

[[ports]]
localPort = 5000
externalPort = 80
